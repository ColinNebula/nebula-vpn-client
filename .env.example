# ===========================================
# NEBULA VPN CLIENT - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!
# ===========================================

# ===================
# API CONFIGURATION
# ===================
# Backend API URL (change for production)
REACT_APP_API_URL=http://localhost:3001/api

# API Version
REACT_APP_API_VERSION=v1

# ===================
# FEATURE FLAGS
# ===================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CRASH_REPORTING=false
REACT_APP_ENABLE_DEBUG_MODE=false

# ===================
# SECURITY SETTINGS
# ===================
# Content Security Policy nonce (auto-generated in production)
REACT_APP_CSP_NONCE=

# Allowed domains for external connections
REACT_APP_ALLOWED_DOMAINS=localhost,api.nebulavpn.com

# ===================
# THIRD-PARTY SERVICES (Optional)
# ===================
# Sentry error tracking (leave empty to disable)
REACT_APP_SENTRY_DSN=

# Analytics (leave empty to disable)
REACT_APP_ANALYTICS_ID=
