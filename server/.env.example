# ===========================================
# NEBULA VPN SERVER - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!
# ===========================================

# ===================
# SERVER CONFIGURATION
# ===================
PORT=3001
NODE_ENV=development
HOST=localhost

# ===================
# SECURITY - CRITICAL (MUST CHANGE IN PRODUCTION)
# ===================
# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_GENERATE_A_64_CHAR_RANDOM_STRING

# JWT Expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# Refresh token secret
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_ANOTHER_64_CHAR_STRING

# Encryption key for sensitive data
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=CHANGE_THIS_GENERATE_A_32_BYTE_HEX_STRING

# ===================
# ADMIN ACCOUNT (seeded on first start)
# Set a strong unique password â€” never commit this file with real values
# ===================
ADMIN_EMAIL=
ADMIN_PASSWORD=

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ===================
# DATABASE (optional - for user management)
# ===================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nebula_vpn
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_DB_PASSWORD
DB_SSL=false

# ===================
# VPN SERVER CONFIGURATION
# ===================
VPN_API_URL=http://your-vpn-server.internal/api
VPN_API_KEY=CHANGE_THIS_VPN_API_KEY

# ===================
# WIREGUARD CONFIGURATION
# ===================
WIREGUARD_ENABLED=true
WIREGUARD_INTERFACE=wg0
WIREGUARD_PORT=51820

# ===================
# STRIPE (for payments - optional)
# ===================
STRIPE_SECRET_KEY=sk_test_CHANGE_THIS
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_THIS

# ===================
# EMAIL NOTIFICATIONS (optional)
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# ===================
# CORS CONFIGURATION
# ===================
ALLOWED_ORIGINS=http://localhost:3000

# ===================
# LOGGING
# ===================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_REQUESTS=true
